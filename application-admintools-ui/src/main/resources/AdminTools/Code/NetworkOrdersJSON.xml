  <content>{{include reference="AdminTools.Code.Macros" /}}
{{velocity}}
  #if ($xcontext.action == 'get')
    #set ($targetPath = "xwiki/bin/get/XNCode/OrdersDataSource")
      #set ($parameters = {
      'outputSyntax' : 'plain',
      'limit' : $request.limit,
      'offset' : $request.offset,
      'showActive' : $request.status,
      'sort' : $request.sort,
      'dir' : $request.dir,
      'showActive' : $request.status,
      'amount' : $request.amount
    })
    #set ($status = 'Completed')
    #if ($request.status == 'true')
      #set ($status = 'Active')
    #end
    #set ($ordersResults = $services.admintools.getJSONFromNetwork($targetPath, $parameters, true))
    #set ($results = {
      'totalrows': $ordersResults.totalrows,
      'returnedrows': $ordersResults.returnedrows,
      'offset': $ordersResults.offset,
      'rows': []
    })
    #getNetworkDomain($requestDomain)
    #checkNetworkAccessRights($hasRights)
    #foreach ($currentEntry in $ordersResults.rows)
      #set ($keyValue = $stringtool.substringAfterLast($currentEntry.id_url, '/'))
      #if ($hasRights)
        #set ($keyURL =
          "https://${requestDomain}/xwiki/bin/view/Instances/GetAccess?id=${customLimits.instanceReference}&amp;detail=" +
          "${customLimits.expirationDate.time}&amp;target=${currentEntry.id_url}")
        #set ($key = "&lt;a href='${keyURL}'&gt;${keyValue}&lt;/a&gt;")
      #else
        #set ($key = $keyValue)
      #end
      #set ($amount = $currentEntry.amount)
      #if ($request.status == 'true')
        #set ($amount = 'N/A')
      #end
      #set ($discard = $results.rows.add({
        'title' : $key,
        'date' : $currentEntry.date,
        'amount' : $amount,
        'status' : $status
      }))
    #end
    #jsonResponse($results)
  #end
{{/velocity}}</content>
