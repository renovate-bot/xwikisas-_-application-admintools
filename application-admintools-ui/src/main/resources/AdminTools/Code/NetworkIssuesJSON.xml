  <content>{{include reference="AdminTools.Code.Macros" /}}

{{velocity}}
  #if ($xcontext.action == 'get')
    #set ($targetPath = "xwiki/bin/get/SupportCode/IssuesListLivetableResults")
    #set ($parameters = {
      'outputSyntax' : 'plain',
      'limit' : $request.limit,
      'offset' : $request.offset,
      'showActive' : 'true',
      'sort' : $request.sort,
      'dir' : $request.dir,
      'key' : $request.key,
      'summary' : $request.summary,
      'status' : $request.status,
      'priority' : $request.priority
    })
    #set ($ordersResults = $services.admintools.getJSONFromNetwork($targetPath, $parameters, false))
    #set ($results = {
      'totalrows': $ordersResults.totalrows,
      'returnedrows': $ordersResults.returnedrows,
      'offset': $ordersResults.offset,
      'rows': []
    })
    #getNetworkDomain($requestDomain)
    #checkNetworkAccessRights($hasRights)
    #foreach ($currentEntry in $ordersResults.rows)
      #if ($hasRights)
        #set ($keyURL =
          "https://${requestDomain}/xwiki/bin/view/Instances/GetAccess?id=${customLimits.instanceReference}&amp;detail=" +
          "${customLimits.expirationDate.time}&amp;target=${currentEntry.key_url}")
        #set ($key = "&lt;a href='${keyURL}'&gt;${currentEntry.key}&lt;/a&gt;")
      #else
        #set ($key = $currentEntry.key)
      #end
      #set ($discard = $results.rows.add({
        'key' : $key,
        'summary' : $currentEntry.summary,
        'priority' : $currentEntry.priority,
        'status' : $currentEntry.status,
        'updated' : $currentEntry.updated
      }))
    #end
    #jsonResponse($results)
  #end
{{/velocity}}</content>
